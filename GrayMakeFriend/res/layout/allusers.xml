<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"  
    android:orientation="vertical" >
           <RelativeLayout
		          android:padding="5dip"
		          android:id="@+id/alluserid"
		          android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
		          >
		          <ImageView
		              android:id="@+id/headimage"
		              android:layout_alignParentLeft="true" 
		              android:layout_width="80dip"
	              	  android:layout_height="80dip"
	              	  android:contentDescription="头像"
	              	  android:scaleType="fitCenter"
		              />
		          <LinearLayout 
		              android:id="@+id/alluserlin"
		              android:layout_alignParentRight="true" 
			          android:orientation="vertical" 
			          android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		          >
			          <TextView
			              android:id="@+id/lastlogintime"
			              android:layout_width="wrap_content"
		              	  android:layout_height="fill_parent"
		              	  android:padding="2dip"
		              	  android:layout_weight="1"
		              	  android:layout_marginLeft="6dp"
		              	  android:text="下午 16:45"
		              	  android:textSize="15dip"
		              	  android:gravity="center"
		              	  android:singleLine="true"
		              	  android:textColor="@color/gray"
			              />
			          <TextView
			              android:id="@+id/bz"
			              android:layout_width="wrap_content"
		              	  android:layout_height="fill_parent"
		              	  android:layout_weight="1"
		              	  android:layout_marginLeft="6dp"
		              	  android:padding="2dip"
		              	  android:textSize="14dip"
		              	  android:singleLine="true"
		              	  android:gravity="center"
		              	  android:textColor="@color/gray"
			              />
		          </LinearLayout>
		          <LinearLayout 
			          android:orientation="vertical" 
			          android:layout_toLeftOf="@id/alluserlin"
			          android:layout_toRightOf="@id/headimage"
			          android:paddingLeft="8dip"
			          android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		          >
			          <TextView
			              android:id="@+id/username"
			              android:layout_width="wrap_content"
		              	  android:layout_height="fill_parent"
		              	  android:layout_weight="1"
		              	  android:text="肖秀"
		              	  android:padding="2dip"
		              	  android:textSize="15dip"
		              	  android:singleLine="true"
		              	  android:gravity="center"
		              	  android:textColor="@color/black"
			              />
			          <TextView
			              android:id="@+id/personinfo"
			              android:layout_width="wrap_content"
		              	  android:layout_height="fill_parent"
		              	  android:padding="2dip"
		              	  android:text="这是唯一一个正常的朋友"
		              	  android:textSize="14sp"
		              	  android:layout_weight="1"
		              	  android:singleLine="true"
		              	  android:gravity="center"
		              	  android:textColor="@color/gray"
			              />
			          <TextView
			              android:id="@+id/basemsg"
			              android:layout_width="wrap_content"
		              	  android:layout_height="fill_parent"
		              	  android:padding="2dip"
		              	  android:text="22岁|175cm|5000-10000"
		              	  android:textSize="14sp"
		              	  android:layout_weight="1"
		              	  android:singleLine="true"
		              	  android:gravity="center"
		              	  android:textColor="@color/gray"
			              />
		          </LinearLayout>

		          <Button
		              android:id="@+id/butsayhello"
		              android:background="@drawable/carefriend"
		              android:layout_width="90dip"
		              android:clickable="true"
		              android:layout_height="40dip"
		              android:layout_alignBottom="@+id/headimage"
		              android:layout_alignRight="@+id/alluserlin"
		              android:text="@string/sayhello" />

		      </RelativeLayout>
		      
</LinearLayout>